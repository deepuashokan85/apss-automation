- hosts: localhost

  tasks:

    - name: Creating security group
      ec2_group:
         name: Ram_security_Group
         description: Allow traffic for port 80 and 22
         region: us-east-2
         rules:
           -  proto: tcp
              from_port: 80
              to_port: 80
              cidr_ip: 0.0.0.0/0
           -  proto: tcp
              from_port: 22
              to_port: 22
              cidr_ip: 10.0.0.0/8


  
